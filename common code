================Driver.cs Code===============
  using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;
using OpenQA.Selenium.Edge;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Testing_Framework_Demo.Common
{
    public class Driver
    {
        public IWebDriver driver=null;

        public void launchBrowser(string browser)
        {
            switch (browser)
            {
                case "Chrome":
                    driver = new ChromeDriver();
                    break;
                case "Edge":
                    driver = new EdgeDriver();
                    break;
                default:
                    driver = new ChromeDriver();
                    break;
            }
            driver.Manage().Window.Maximize();
            driver.Navigate().GoToUrl("https://demoqa.com");
        }

        public IWebDriver getDriver()
        {
            return driver;
        }

        public void Close()
        {
            driver.Quit();
        }

    }
}

=============TestBase.cs Code==================
  using Microsoft.VisualStudio.TestTools.UnitTesting;
using OpenQA.Selenium;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Testing_Framework_Demo.Common
{
    [TestClass]
    public class TestBase
    {
        public IWebDriver webDriver;
        public Driver driver;

        [TestInitialize]

        public void startUpTest()
        {
            driver = new Driver();
            driver.launchBrowser("chrome");
            webDriver=driver.getDriver();
        }

        [TestCleanup]
        public void endTest()
        {
        driver.Close();
        }

    }
}

================Wait.cs Code===============
  using OpenQA.Selenium;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using SeleniumExtras.WaitHelpers;
using OpenQA.Selenium.Support.UI;

namespace Testing_Framework_Demo.Common
{
    public class Wait
    {
        public static void waitForElement(WebDriverWait wait,IWebElement element)
        {
            wait.Until(ExpectedConditions.ElementToBeClickable(element));
        }
    }
}

=================TextBoxPage.cs=====================

using OpenQA.Selenium;
using OpenQA.Selenium.Support.UI;
using SeleniumExtras.PageObjects;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using Testing_Framework_Demo.Common;

namespace Testing_Framework_Demo.PageObject
{
    public class TextBoxPage : Wait
    {
        public WebDriverWait wait;

        public TextBoxPage(IWebDriver driver)
        {
            wait = new WebDriverWait(driver, TimeSpan.FromSeconds(10));
            PageFactory.InitElements(driver,this);
        }

        //Web elements
        [FindsBy(How = How.Id, Using = "userName")]
        private IWebElement fullNameTextBox;

        [FindsBy(How = How.Id, Using = "userEmail")]
        private IWebElement emailTextBox;

        [FindsBy(How = How.Id, Using = "currentAddress")]
        private IWebElement currentAddressTextBox;

        [FindsBy(How = How.Id, Using = "permanentAddress")]
        private IWebElement permanentAddressTextBox;

        [FindsBy(How = How.Id, Using = "submit")]
        private IWebElement submitButton;

        [FindsBy(How = How.XPath, Using = "//div[@id='output']//p[1]")]
        private IWebElement savedName;

        [FindsBy(How = How.XPath, Using = "//div[@id='output']//p[2]")]
        private IWebElement savedEmail;

        [FindsBy(How = How.XPath, Using = "//div[@id='output']//p[3]")]
        private IWebElement savedCurrentAddress;

        [FindsBy(How = How.XPath, Using = "//div[@id='output']//p[4]")]
        private IWebElement savedPermanentAddress;

        //Actions on web elements

        public void navigateToTextboxPage(IWebDriver driver)
        {
            driver.Navigate().GoToUrl("https://demoqa.com/text-box");
            Wait.waitForElement(wait, fullNameTextBox);

        }

        public void enterFullName(string fullName)
        {
            fullNameTextBox.SendKeys(fullName);
        }
        public string getEnteredFullName()
        {
            return fullNameTextBox.GetAttribute("value");
        }

        public void enterEmail(string email)
        {
            emailTextBox.SendKeys(email);
        }

        public void enterCurrentAddress(string currentAddress)
        {
            currentAddressTextBox.SendKeys(currentAddress);
        }

        public void enterPermanentAddress(string Address)
        {
            permanentAddressTextBox.SendKeys(Address);
        }

        public void clickSubmit(IWebDriver driver)
        {
            ((IJavaScriptExecutor)driver).ExecuteScript("arguments[0].scrollIntoView(true);", submitButton);
            submitButton.Click();
        }
        public string getSavedName()
        {
            Wait.waitForElement(wait, fullNameTextBox);
            return savedName.Text;
        }

        public string  getSavedEmail()
        {
            Wait.waitForElement(wait, savedEmail);
            return savedEmail.Text;
        }

        public string getSavedCurrentAddress()
        {
            Wait.waitForElement(wait, savedCurrentAddress);
            return savedCurrentAddress.Text;
        }
        public string getPermanentAddress()
        {
            Wait.waitForElement(wait, savedPermanentAddress);
            return savedPermanentAddress.Text;
        }
    }
}
================TextBoxTests.cs==================================
using Microsoft.VisualStudio.TestTools.UnitTesting;
using OpenQA.Selenium.Interactions;
using OpenQA.Selenium.Support.UI;
using OpenQA.Selenium;
using SeleniumExtras.WaitHelpers;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using Testing_Framework_Demo.Common;
using Testing_Framework_Demo.PageObject;
using System.Threading;

namespace Testing_Framework_Demo.Tests
{
    [TestClass]
    public class TextBoxTests :TestBase
    {
        [TestMethod]

        public void VerifyTextBox()
        {
            //create reference of page object files
            TextBoxPage textBoxPage=new TextBoxPage(webDriver);
            //enter the path to navigate
            textBoxPage.navigateToTextboxPage(webDriver);

            //eneter user details here to pass
            textBoxPage.enterFullName("Aishwary G");
            textBoxPage.enterEmail("aishwarya@gmail.com");
            textBoxPage.enterCurrentAddress("Indiranagar, Bangaluru");
            textBoxPage.enterPermanentAddress("Tumkur, Karantaka");
            Thread.Sleep(2000);

         
           
            textBoxPage.clickSubmit(webDriver);

            Assert.AreEqual("Name:Aishwarya G", textBoxPage.getSavedName());
            Assert.AreEqual("Email:aishwarya@gmail.com", textBoxPage.getSavedEmail());
            Assert.AreEqual("Current Address :Indiranagar, Bangaluru", textBoxPage.getSavedCurrentAddress());
            Assert.AreEqual("Permananet Address :Tumkur, Karantaka", textBoxPage.getPermanentAddress());
        }
    }
}


