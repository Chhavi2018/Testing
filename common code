using System.Linq;
using System.Web.Mvc;

namespace Basic_CRUD
{
    public class StudentController : Controller
    {
        private static List<Student> students = new List<Student>();

        // GET: Student
        public ActionResult Index()
        {
            return View(students);
        }

        // GET: Student/Create
        public ActionResult Create()
        {
            return View();
        }

        // POST: Student/Create
        [HttpPost]
        public ActionResult Create(Student student)
        {
            try
            {
                student.Id = students.Count > 0 ? students.Max(s => s.Id) + 1 : 1;
                students.Add(student);
                return RedirectToAction("Index");
            }
            catch
            {
                return View();
            }
        }

        // GET: Student/Delete/5
        public ActionResult Delete(int id)
        {
            var student = students.FirstOrDefault(s => s.Id == id);
            return View(student);
        }

        // POST: Student/Delete/5
        [HttpPost]
        public ActionResult Delete(int id)
        {
            try
            {
                var student = students.FirstOrDefault(s => s.Id == id);
                if (student != null)
                {
                    students.Remove(student);
                }
                return RedirectToAction("Index");
            }
            catch
            {
                return View();
            }
        }

        // POST: Student/DeleteAjax
        [HttpPost]
        public JsonResult DeleteAjax(int id)
        {
            try
            {
                var student = students.FirstOrDefault(s => s.Id == id);
                if (student != null)
                {
                    students.Remove(student);
                    return Json(new { success = true });
                }
                return Json(new { success = false, message = "Student not found" });
            }
            catch (Exception ex)
            {
                return Json(new { success = false, message = ex.Message });
            }
        }


    }
}



@model List<Student>

@{
    ViewBag.Title = "Students List";
}

<h2>Students List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Role Number</th>
            <th>Department</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr id="row-@student.Id">
            <td>@student.Id</td>
            <td>@student.Name</td>
            <td>@student.RoleNumber</td>
            <td>@student.Department</td>
            <td>@student.Address</td>
            <td>
                <button class="btn btn-danger" onclick="deleteStudent(@student.Id)">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>

@Html.ActionLink("Create New", "Create")

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function deleteStudent(id) {
            if (confirm("Are you sure you want to delete this student?")) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteAjax", "Student")',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            $("#row-" + id).remove();
                            alert("Student deleted successfully.");
                        } else {
                            alert(response.message || "An error occurred while deleting the student.");
                        }
                    },
                    error: function () {
                        alert("An error occurred while processing your request.");
                    }
                });
            }
        }
    </script>
}



------------This is BundleConfig.cs-----------------
using System.Web;
using System.Web.Optimization;

namespace Basic_CRUD
{
    public class BundleConfig
    {
        // For more information on bundling, visit https://go.microsoft.com/fwlink/?LinkId=301862
        public static void RegisterBundles(BundleCollection bundles)
        {
            bundles.Add(new ScriptBundle("~/bundles/jquery").Include(
                        "~/Scripts/jquery-{version}.js"));

            bundles.Add(new ScriptBundle("~/bundles/jqueryval").Include(
                        "~/Scripts/jquery.validate*"));

            // Use the development version of Modernizr to develop with and learn from. Then, when you're
            // ready for production, use the build tool at https://modernizr.com to pick only the tests you need.
            bundles.Add(new ScriptBundle("~/bundles/modernizr").Include(
                        "~/Scripts/modernizr-*"));

            bundles.Add(new Bundle("~/bundles/bootstrap").Include(
                      "~/Scripts/bootstrap.js"));

            bundles.Add(new StyleBundle("~/Content/css").Include(
                      "~/Content/bootstrap.css",
                      "~/Content/site.css"));
        }
    }
}
---------------This is FilterConfig.cs---------

using System.Web;
using System.Web.Mvc;

namespace Basic_CRUD
{
    public class FilterConfig
    {
        public static void RegisterGlobalFilters(GlobalFilterCollection filters)
        {
            filters.Add(new HandleErrorAttribute());
        }
    }
}


---------------This is routeconfig.cs----------------

using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;
using System.Web.Routing;

namespace Basic_CRUD
{
    public class RouteConfig
    {
        public static void RegisterRoutes(RouteCollection routes)
        {
            routes.IgnoreRoute("{resource}.axd/{*pathInfo}");

            routes.MapRoute(
                name: "Default",
                url: "{controller}/{action}/{id}",
                defaults: new { controller = "Student", action = "Index", id = UrlParameter.Optional }
            );
        }
    }
}





---------This is Student controller--------------------
public class StudentController : Controller
{
    private static List<Student> students = new List<Student>();

    // GET: Student
    public ActionResult Index()
    {
        return View(students);
    }

    // GET: Student/Create
    public ActionResult Create()
    {
        return View();
    }

    // POST: Student/Create
    [HttpPost]
    public ActionResult Create(Student student)
    {
        try
        {
            student.Id = students.Count > 0 ? students.Max(s => s.Id) + 1 : 1;
            students.Add(student);
            return RedirectToAction("Index");
        }
        catch
        {
            return View();
        }
    }

    // GET: Student/Delete/5
    public ActionResult Delete(int id)
    {
        var student = students.FirstOrDefault(s => s.Id == id);
        return View(student);
    }

    // POST: Student/Delete/5
    [HttpPost]
    public ActionResult Delete(int id, FormCollection collection)
    {
        try
        {
            var student = students.FirstOrDefault(s => s.Id == id);
            students.Remove(student);
            return RedirectToAction("Index");
        }
        catch
        {
            return View();
        }
    }
}

---------------This is Model-------------
public class Student
{
    public int Id { get; set; }
    public string Name { get; set; }
    public string RoleNumber { get; set; }
    public string Department { get; set; }
    public string Address { get; set; }
}

